<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_premio_sucesso"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="16dp">


    <TextView
        android:id="@+id/dialogTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="center"
        android:textSize="26sp"
        android:textColor="#2D2D2D"
        android:text="Você tem certeza\n que deseja encerrar\n a sua viagem?"
        android:textFontWeight="900" />
    <TextView
        android:id="@+id/dialogTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="center"
        android:textColor="#2D2D2D"
        android:text="Taxas  podem ser cobradas devido à não utilização do serviço agendado previamente."
        android:textFontWeight="900" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#D4EDDA"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Continuar viagem"
        android:textAllCaps="false"
        android:textColor="#40CB4E"
        android:textFontWeight="900"
        android:textSize="16dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialogButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#EDEDED"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Encerrar viagem"
        android:textAllCaps="false"
        android:textColor="#666666"
        android:textFontWeight="900"
        android:textSize="16dp" />


</LinearLayout>

